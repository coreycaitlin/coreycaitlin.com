<div class="border-b">
    <h1 class="notprose font-medium text-2xl mb-0 text-neutral-800">{{ title }}</h1>
    <h2 class="notprose italic font-light text-lg text-neutral-500 mt-0">{% if subtitle %}
        {{ subtitle }}
    {% endif %}</h2>
    <p>{{ date | date('MMMM D, YYYY') }}{% if meta %}
        | {{ meta }}
        {% endif %}
    </p>
</div>
<article class="border-b pb-6 mb-2 prose-blockquote:not-italic prose-blockquote:text-neutral-600 prose-h2:text-lg prose-h3:text-lg prose-h3:font-normal">
    {{ content | safe }}
</article>
